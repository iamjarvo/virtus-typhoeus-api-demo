<h1>Users</h1>
<%= link_to "New User", new_user_path %>
<h3>Filters</h3>
<%= form_tag users_path, method: "GET", class: "form-horizontal" do %>
  <div class="form-group">
    <%= label_tag "search_first_name", "First Name" %>
    <%= text_field_tag "search[first_name]" %>
  </div>
  <div class="form-group">
    <%= label_tag "search_last_name", "Last Name" %>
    <%= text_field_tag "search[last_name]" %>
  </div>
  <div class="form-group">
    <%= label_tag "search_email", "Email" %>
    <%= text_field_tag "search[email]" %>
  </div>
  <div class="form-group">
    <%= submit_tag "Search", class: "btn btn-primary" %>
    <%= link_to "All Users", users_path, class: "btn btn-primary" %>
  </div>
<% end %>
<table class='table table-striped table-bordered table-hover'>
  <thead>
    <tr>
      <th>id</th>
      <th>First Name</th>
      <th>Last Name</th>
      <th>Email</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.id %></td>
        <td><%= user.first_name %></td>
        <td><%= user.last_name %></td>
        <td><%= user.email %></td>
        <td><%= link_to "View", user_path(user) %> | <%= link_to "Edit", edit_user_path(user) %> | <%= link_to "Destroy", user_path(user), method: :delete, data: {confirm: "Are you sure?"} %></td>
      </tr>
    <% end %>
  </tbody>
</table>

